     <div class="row">
          <% @groups.each do |group| %>
          <div class="col-md-3" style="display: inline-block;">
               <strong><%= group.name %>
                    <%= group.room %>
                    <%= group.task %></strong>
               <br>
               <div>
                    <% @people.each do |person| %>
                      <% if person.group_id == group.id %>
                      <% if person.sensei == true %>
                        <span class="red"><%= person.name %></span><%= best_in_place person, :sensei, :as => :select, :collection => %w(Sensei ) %>
                        <% else %>
                        <%= person.name %><%= best_in_place person, :sensei, :as => :select, :collection => %w(Sensei ) %>

                        <% end %>
                        <br>
                      <% end %>
                    <% end %>
               </div>
               <%= link_to 'Edit', edit_group_path(group) %>
               <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
               <br>
          </div>
          <% end %>
     </div>
<!-- </table> -->

<br>

<%= link_to 'New Group', new_group_path %>

<h1>Listing People</h1>

    <% if @groups.size == 0 %>
